<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.taxiride"
      android:versionCode="1"
      android:versionName="1.0">
	<uses-sdk android:minSdkVersion="8" />
	
    <application android:icon="@drawable/icon" android:label="@string/app_name">
       <uses-library android:name="com.google.android.maps" />
        <activity android:name=".TaxiRideActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name =".Address"></activity>
		<activity android:name =".FindBy"></activity>
		<activity android:name =".CabDirectory"></activity>
		<activity android:name =".YellowCab"></activity>
		<activity android:name =".LuxorCab"></activity>
		<activity android:name =".LogInPage"></activity>
		<activity android:name =".DriverRequest"></activity>
		<activity android:name =".MapOfRequests"></activity>
		<activity android:name =".RequestConfirmation"></activity>
		<activity android:name =".Map"></activity>
		<activity android:name =".ListOfRequest"></activity>
		<activity android:name =".PassengerRequest"></activity>
		<activity android:name =".StatusPage"></activity>
		<activity android:name =".DriverWindow"></activity>
		<activity android:name =".MyOrder"></activity>
		<activity android:name =".MyOrderInfo"></activity>
		
		
    </application>
    
    <uses-permission android:name="android.permission.ACCESS_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_GPS"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.CALL_PRIVILEGED"/>
    
    
    
</manifest>