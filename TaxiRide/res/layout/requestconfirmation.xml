<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
        <Button android:id="@+id/refresh" android:text="Refresh" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20px" android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/arrivalTime " android:layout_alignParentRight="true"></Button>
        <TextView android:layout_height="wrap_content" android:textSize="30px" android:text="Driver Name:  " android:id="@+id/driverName " android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_marginTop="47dp"></TextView>
        <TextView android:layout_width="wrap_content" android:textSize="30px" android:id="@+id/driverPhone " android:layout_height="wrap_content" android:text="Driver Phone #: " android:layout_below="@+id/driverName " android:layout_alignParentLeft="true" android:layout_marginTop="30dp"></TextView>
        <TextView android:layout_width="wrap_content" android:textSize="30px" android:id="@+id/toAddress " android:layout_height="wrap_content" android:text="To Address:  " android:layout_above="@+id/refresh" android:layout_alignParentLeft="true" android:layout_marginBottom="56dp"></TextView>
        <TextView android:layout_width="wrap_content" android:textSize="30px" android:id="@+id/fromAddress " android:layout_height="wrap_content" android:text="From Address:  " android:layout_above="@+id/toAddress " android:layout_alignRight="@+id/driverPhone " android:layout_marginBottom="50dp"></TextView>
        <TextView android:layout_width="wrap_content" android:textSize="30px" android:id="@+id/cost " android:layout_height="wrap_content" android:text="Estimated Cost:  " android:layout_below="@+id/driverPhone " android:layout_alignParentLeft="true" android:layout_marginTop="37dp"></TextView>
        <TextView android:layout_width="wrap_content" android:textSize="30px" android:id="@+id/arrivalTime " android:layout_height="wrap_content" android:text="Estimated Arrival Time:  " android:layout_below="@+id/cost " android:layout_alignParentLeft="true" android:layout_marginTop="26dp"></TextView>
    	
</RelativeLayout>
