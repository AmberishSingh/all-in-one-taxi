<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#888888"
    >
    <ImageView android:src="@drawable/findby" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/test_image" android:layout_alignParentLeft="true" android:layout_alignParentRight="true"></ImageView>
     <Button android:background="#444444" android:text="Edit Preference" android:textColor="#ffffff" android:textSize="32px" android:id="@+id/editPreference" android:layout_height="110px" android:layout_width="300px" android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/ButtonDriverDir" android:layout_marginBottom="14dp"></Button>
     <Button android:background="#444444" android:text="Cab Directory " android:textColor="#ffffff" android:textSize="32px" android:id="@+id/ButtonCabDir" android:layout_height="110px" android:layout_width="300px" android:layout_centerVertical="true" android:layout_alignLeft="@+id/ButtonDriverDir"></Button>
     <Button android:background="#444444" android:text="Reserve a Taxi" android:textColor="#ffffff" android:textSize="32px" android:id="@+id/ButtonDriverDir" android:layout_height="110px" android:layout_width="300px" android:layout_above="@+id/editPreference" android:layout_centerHorizontal="true" android:layout_marginBottom="22dp"></Button>
    	
</RelativeLayout>

